<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/background_listview">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="84dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:id="@+id/result_Rlayout"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="PRESIDENT"
                android:id="@+id/textView10"
                android:layout_gravity="center"
                android:fontFamily="@string/font_family"
                android:textSize="31dp"
                android:textIsSelectable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="false"
                android:gravity="center"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Choose only 1"
                android:id="@+id/textView11"
                android:layout_gravity="center"
                android:fontFamily="@string/font_family_light"
                android:textSize="18dp"
                android:layout_below="@+id/textView10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="false"
                android:gravity="center" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/result_frame">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listviewcandidate"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@color/list_background"
            android:listSelector="@drawable/list_selector"
            android:divider="@color/list_divider"
            android:choiceMode="singleChoice"/>

        <TextView
            android:id="@+id/candidate_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"/>

    </FrameLayout>


</LinearLayout >
