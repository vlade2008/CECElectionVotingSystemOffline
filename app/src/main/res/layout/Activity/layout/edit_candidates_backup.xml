<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityMainDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/activityMainheaderLayout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#23538a"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:paddingBottom="20dp" />


            <TextView
                android:id="@+id/activityMainProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sarah Connor"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="25sp"
                android:textIsSelectable="false" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/activityMainMobileNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/activityMainheaderLayout"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activityMainCallIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_voter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/activityMainCallIcon"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/position_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/activityMainMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/darker_gray"
                    android:text="Position" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/activityMainMobileNumberLayout"
            android:layout_toStartOf="@+id/activityMainMobileNumberLayout"
            android:layout_alignEnd="@+id/activityMainMobileNumberLayout">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_people" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_marginLeft="20dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/party_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="cj"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:text="Party" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>