<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/background_listview"
        android:padding="10dp"
        android:elevation="5dp">




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="250dip"
            android:layout_height="250dip"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circle_shape"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="0" />

        <TextView
            android:id="@+id/tvTimeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Offline System"
            android:textColor="@color/colorPrimary"
            android:textSize="18dip"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="75dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btnStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Start Vote"
            android:textColor="#fff"
            android:background="@drawable/button_shadow_finish"
            android:elevation="10dp"
            android:elegantTextHeight="false"
            android:visibility="visible"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btnNewTime"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="New Election"
            android:textColor="#fff"
            android:background="@drawable/button_shadow_new"
            android:elevation="10dp"
            android:elegantTextHeight="false"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnResume"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Resume Election"
            android:textColor="#fff"
            android:background="@drawable/button_shadow"
            android:elevation="10dp"
            android:elegantTextHeight="false"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:textSize="12dp" />

        <Button
            android:background="@drawable/button_shadow_stop"
            android:id="@+id/btnStopTime"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Election has been finished"
            android:textColor="#fff"
            android:visibility="gone"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btnFinishTime"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Finish Timer"
            android:textColor="#fff"
            android:background="@drawable/button_shadow_finish"
            android:elevation="10dp"
            android:elegantTextHeight="false"
            android:visibility="gone"
            android:textSize="13dp" />

    </LinearLayout>

    </LinearLayout>
</LinearLayout>