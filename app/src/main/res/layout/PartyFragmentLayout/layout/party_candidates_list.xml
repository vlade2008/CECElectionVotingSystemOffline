<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityMainDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_listview">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/some_layout_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/drop_shadow"
            >

            <RelativeLayout
                android:id="@+id/activityMainheaderLayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#23538a"
                android:orientation="vertical"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#ffffff"
                    android:id="@+id/candidateImage"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="false"
                    android:layout_margin="5dp" />

                <TextView
                    android:id="@+id/textviewCandidate_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sarah Connor"
                    android:textColor="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textSize="16sp"
                    android:textIsSelectable="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_below="@+id/activityMainheaderLayout"
                android:background="@color/background_listview_list">

                <ImageView
                    android:id="@+id/ImageView"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/logo"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textviewCandidate_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="1."
                    android:textSize="18sp"
                    android:fontFamily="@string/font_family"
                    android:textColor="#212121"/>

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textviewCandidate_Position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="1."
                    android:textSize="18sp"
                    android:fontFamily="@string/font_family"
                    android:textColor="#212121" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ImageView"
                    android:layout_marginLeft="13dp"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="Position"
                        android:layout_marginTop="5px" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:text="NAP(National Action Party)"
                        android:id="@+id/textviewCandidate_Party"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="Number of Vote"
                        android:layout_marginTop="5px" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:text="15"
                        android:id="@+id/textviewCanidate_Vote" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>